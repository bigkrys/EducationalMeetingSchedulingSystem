{
  "ignoreCommand": "bash scripts/vercel-ignore.sh",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["hkg1"],
  "headers": [],
  "buildCommand": "pnpm vercel-build",
  "installCommand": "pnpm install --ignore-scripts",
  "crons": [
    {
      "path": "/api/jobs/reset-quota",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/jobs/expire-pending",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/jobs/remind-approval",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/jobs/cleanup-waitlist",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/jobs/expire-waitlist",
      "schedule": "*/10 * * * *"
    }
  ]
}
